datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @id @default(autoincrement())
  name  String?
  email String  @unique
  password  String
  balance   Float    @default(0)
  cash  Cash[]
}

model Cash {
  id    Int     @id @default(autoincrement())
  name  String
  price Float
  type  String
  user  User?   @relation(fields: [userId], references: [id])
  userId Int?
}